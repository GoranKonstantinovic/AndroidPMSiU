<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidPMSiU.Views.Account.AccountPage"
             BackgroundColor="#fff0d3"
             Title="Профил">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="logout.png" Order="Primary" Priority="1" Clicked="LogoutProcedure"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label 
                x:Name="Label_Account_Text" 
                Text="Улоговани сте као корисник: " 
                VerticalTextAlignment="Center" 
                FontSize="Medium" 
                Grid.Row="0"
                Grid.Column="1"/>
            <Label 
                x:Name="Label_Username" 
                Text="{Binding Username}" 
                VerticalTextAlignment="Center" 
                FontSize="Medium" 
                Grid.Row="0"
                Grid.Column="2"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>